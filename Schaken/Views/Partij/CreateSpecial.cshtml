@model Schaken.Models.Partij

@{
    ViewData["Title"] = "CreateSpecial";
}

<h1>Invoeren uitslag</h1>

<h4>Uitslag partij van @Model.Speler.Naam op @Model.Dag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSpecial">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Dag" value=@Model.Dag />              @*Nodig om in request weer mee te geven!*@
            <input type="hidden" asp-for="SpelerId" value=@Model.SpelerId />    @*Nodig om in request weer mee te geven!*@

            <div class="form-group">
                @Html.LabelFor(model => model.Uitslag, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.DropDownListFor(
                model => model.Uitslag,
                new SelectList(Enum.GetValues(typeof(Uitslag))),
                new { @class = "form-control" })*@
                    @*<select asp-for="Uitslag" class="form-control" asp-items="new SelectList(Enum.GetValues(typeof(Uitslag)))"></select>*@
                    <select asp-for="Uitslag" class="form-control" asp-items="Html.GetEnumSelectList<Uitslag>()"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
